{
  "name": "docs-companion",
  "displayName": "Docs Companion",
  "description": "Context-aware documentation assistant that keeps you informed without writing code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "docs-companion.showDocs",
        "title": "Docs Companion: Show Documentation"
      },
      {
        "command": "docs-companion.showContextDocs",
        "title": "Docs Companion: Show Context Documentation"
      }
    ],
    "keybindings": [
      {
        "command": "docs-companion.showDocs",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "docs-companion-sidebar",
          "title": "Docs Companion",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "docs-companion-sidebar": [
        {
          "type": "webview",
          "id": "docs-companion.sidebarView",
          "name": "Documentation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
